<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvCommentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCommentUser"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:text="TextView"
        android:textColor="@color/grey_6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvlikesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCommentUser"
        android:layout_toRightOf="@+id/tvTimestamp"
        android:text="TextView"
        android:textColor="@color/grey_6"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnLikeComment"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:tint="@color/grey_6"
        app:srcCompat="@drawable/ic_heart_outline_24dp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvCommentUser"
        android:text="TextView" />
</RelativeLayout>